<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= titulo %></title>
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="icon" type="image/png" href="http://localhost:3000/images/dadisimo_logo.png">
</head>
<body>
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-brand">
                <h1>Dadisimo Admin</h1>
            </div>
            <ul class="nav-menu">
                <li><a href="/api/admin/dashboard" class="nav-link">Dashboard</a></li>
                <li><a href="/api/admin/ventas" class="nav-link">Ventas</a></li>
                <li><a href="/api/admin/login" class="nav-link">Salir</a></li>
            </ul>
        </div>
    </nav>

    <main class="main-content">
        <div class="container">
            <div class="page-header">
                <h2>
                    <%= accion === 'crear' ? 'Nuevo Producto' : 'Editar Producto' %>
                </h2>
                <a href="/api/admin/dashboard" class="btn btn-secondary">
                    Volver
                </a>
            </div>

            <div class="form-container">
                <form id="formProducto" enctype="multipart/form-data">
                    <div class="form-row">
                        <div class="form-group">
                            <label for="nombre">
                                Nombre *
                            </label>
                            <input 
                                type="text" 
                                id="nombre" 
                                name="nombre" 
                                value="<%= producto ? producto.nombre : '' %>"
                                required
                            >
                        </div>

                        <div class="form-group">
                            <label for="material">
                                Material 
                            </label>
                            <input 
                                type="text" 
                                id="material" 
                                name="material" 
                                value="<%= producto ? producto.material : '' %>"
                                placeholder="Ej: Metal, Resina, Plástico"
                            >
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="descripcion">
                            Descripción
                        </label>
                        <textarea 
                            id="descripcion" 
                            name="descripcion" 
                            rows="4"
                        ><%= producto ? producto.descripcion : '' %></textarea>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="tipo">
                                Tipo *
                            </label>
                            <select id="tipo" name="tipo" required>
                                <option value="">Seleccionar...</option>
                                <option value="dado" <%= producto && producto.tipo === 'dado' ? 'selected' : '' %>>Dado</option>
                                <option value="mini" <%= producto && producto.tipo === 'mini' ? 'selected' : '' %>>Mini</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="precio">
                                Precio *
                            </label>
                            <input 
                                type="number" 
                                id="precio" 
                                name="precio" 
                                value="<%= producto ? producto.precio : '' %>"
                                step="0.01"
                                min="0"
                                required
                            >
                        </div>

                        <div class="form-group">
                            <label for="stock">
                                Stock
                            </label>
                            <input 
                                type="number" 
                                id="stock" 
                                name="stock" 
                                value="<%= producto ? producto.stock : 0 %>"
                                min="0"
                            >
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="imagen">
                            Imagen
                        </label>
                        <input 
                            type="file" 
                            id="imagen" 
                            name="imagen" 
                            accept="image/*"
                        >
                        <% if (producto && producto.imagen) { %>
                            <div class="preview-image">
                                <img src="<%= producto.imagen %>" alt="Preview">
                            </div>
                        <% } %>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-success">
                            Guardar
                        </button>
                        <a href="/api/admin/dashboard" class="btn btn-secondary">
                            Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <footer class="footer">
        <p>Dadisimo - Sistema de gestion y venta de articulos de TTRPGs</p>
        <p>Desarrollado por: Nicanor Gatti</p>
    </footer>

    <script>
        const accion = '<%= accion %>';
        const productoId = '<%= producto ? producto.id : null %>';
        
        document.getElementById('formProducto').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const url = accion === 'crear' ? '/api/productos' : `/api/productos/${productoId}`;
            const method = accion === 'crear' ? 'POST' : 'PUT';
            
            try {
                const response = await fetch(url, {
                    method: method,
                    body: formData
                });
                
                if (response.ok) {
                    alert('Producto guardado exitosamente');
                    window.location.href = '/api/admin/dashboard';
                } else {
                    const error = await response.json();
                    alert('Error: ' + error.error);
                }
            } catch (error) {
                alert('Error al guardar el producto');
                console.error(error);
            }
        });
    </script>
</body>
</html>